{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",

    "declaration": true,

    "strict": true,
    "noImplicitAny": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
